@model List<Class>


<h1>Classes</h1>

    <table class="table">
       

        <tbody>
            @foreach (var Class in Model)
            {
                <tr>
                    <th><a type="submit" asp-area="" asp-controller="Student" asp-action="ListByClass" asp-route-Class="@Class.Id">@Class.Id</a></th>


                    <th><button><a asp-controller="Class" asp-action="Delete" asp-route-Class="@Model.FirstOrDefault().Id">Delete</a></button></th>
                </tr>
            }
        </tbody>
    </table>

    <button><a asp-controller="Class" asp-action="Create">Create new class</a></button>
