@{
}
@model IEnumerable<Student>
<h1><a asp-controller="Class" asp-action="List">Classes</a></h1>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Surname</th>
                <th>Class</th>
                
            </tr>
        </thead>

        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <th>@student.Name</th>
                    <th>@student.Surname</th>
                    <th>@student.ClassId</th>
                   
                    
                </tr>
            }
        </tbody>
    </table>

